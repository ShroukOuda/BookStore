@model BookFilterViewModel
@{
    ViewData["Title"] = "Books";
    var bookCount = Model.Books?.Count() ?? 0;
}

<div class="row">
    <!-- Sidebar Filters -->
    <div class="col-lg-3">
        @await Html.PartialAsync("BookFilter", Model)
    </div>

    <!-- Book Catalog -->
    <div class="col-lg-9">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body py-3">
                        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-center gap-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-gradient rounded-circle p-2 me-3">
                                    <i class="bi bi-book text-white fs-4"></i>
                                </div>
                                <div>
                                    <h1 class="mb-1 fw-bold text-dark">Books Catalog</h1>
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Discover and manage your book collection
                                        @if (bookCount > 0)
                                        {
                                            <span class="badge bg-primary-subtle text-primary ms-2">
                                                @bookCount Books
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                            <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow-sm d-flex align-items-center gap-2 px-4 py-2">
                                <i class="bi bi-plus-circle"></i>
                                Add New Book
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("BookList", Model)
    </div>
</div>
