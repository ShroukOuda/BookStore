@model CreateBookFromViewModel

@{
    ViewData["Title"] = "Add Book";
}

<h2 class="mb-4">
    <i class="bi bi-plus-circle"></i>
    Add New Book
</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ISBN" class="control-label"></label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="StockQuantity" class="control-label"></label>
                    <input asp-for="StockQuantity" class="form-control" type="number" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Pages" class="control-label"></label>
                    <input asp-for="Pages" class="form-control" type="number" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Language" class="control-label"></label>
                    <input asp-for="Language" class="form-control" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="PublishedDate" class="control-label"></label>
                    <input asp-for="PublishedDate" class="form-control" type="date" />
                    <span asp-validation-for="PublishedDate" class="text-danger"></span>
                </div>
                
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="SelectedAuthors" class="control-label"></label>
                    <select class="form-select" asp-for="SelectedAuthors" asp-items="Model.Authors" class="form-control">
                        <option value="">Select Author(s)</option>
                    </select>
                    <span asp-validation-for="SelectedAuthors" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">
           
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Book Image</label>
                <input asp-for="ImageUrl" class="form-control" type="file"
                data-rule-extension="@FileSettings.AllowedExtensions.Replace(".", string.Empty)"
                data-msg-extension="Only @FileSettings.AllowedExtensions are allowed"
                data-rule-filesize="@FileSettings.MaxFileSizeInBytes"
                data-msg-filesize="Maximum allowed size is @FileSettings.MaxFileSizeInMB MB"
                />

                <small class="form-text text-muted">Only @FileSettings.AllowedExtensions files are allowed with max size @FileSettings.MaxFileSizeInMB MB.</small>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <img class="img-preview" alt="BookImage" />
            </div>
            
        </div>
      
    </div>

    <div class="form-group">
        <input type="submit" value="Create Book" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i>
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
	<script src="~/js/filesize-validator.js" asp-append-version="true"></script>
	<script src="~/js/book-form.js" asp-append-version="true"></script>
}